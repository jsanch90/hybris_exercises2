<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:na="http://www.hybris.com/cockpitng/config/notifications">

    <context merge-by="module" component="editorareaactions" type="Consignment">
        <y:actions xmlns:y="http://www.hybris.com/cockpit/config/hybris">
            <y:group qualifier="common">
                <y:label>actiongroup.common</y:label>
                <y:action action-id="de.hybris.training.backoffice.actions.confirmpickupaction"
                          property="currentObject"/>
            </y:group>
        </y:actions>
    </context>

    <!-- Notification Area-->
    <context component="notification-area">
        <na:notification-area>
            <na:notifications eventType="trainingbackoffice.confirmpickup.event" level="SUCCESS">
                <na:message>hmc.action.confirmpickup.success</na:message>
            </na:notifications>
        </na:notification-area>
    </context>

    <context component="explorer-tree" merge-by="module">
        <n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
            <n:navigation-node id="Utrend">
                <n:type-node id="LegacyOrder" code="LegacyOrder"/>
                <n:type-node id="LegacyOrderEntry" code="LegacyOrderEntry"/>
            </n:navigation-node>
        </n:explorer-tree>
    </context>

    <context component="listview" type="LegacyOrder">
        <list-view:list-view xmlns:list-view="http://www.hybris.com/cockpitng/component/listView">
            <list-view:column qualifier="orderNumber"/>
            <list-view:column qualifier="customer"/>
            <list-view:column qualifier="orderStatus"/>
            <list-view:column qualifier="orderTotal"/>
        </list-view:list-view>
    </context>

    <context component="listview" type="LegacyOrderEntry">
        <list-view:list-view xmlns:list-view="http://www.hybris.com/cockpitng/component/listView">
            <list-view:column qualifier="uid"/>
            <list-view:column qualifier="basePrice"/>
            <list-view:column qualifier="quantity"/>
            <list-view:column qualifier="product"/>
        </list-view:list-view>
    </context>

    <context type="LegacyOrder" component="create-wizard">
        <wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="LegacyOrderWizard"
                 title="create.title(ctx.TYPE_CODE)">

            <wz:prepare id="LegacyOrderPrepare">
                <wz:initialize property="newLegacyOrder" type="LegacyOrder"/>
                <wz:assign property="newLegacyOrder.code" value="ctx.code"/>
            </wz:prepare>

            <wz:step id="step1" label="General" sublabel="Legacy Order information">
                <wz:content id="step1.content">
                    <wz:property-list root="newLegacyOrder">
                        <wz:property qualifier="orderNumber" type="java.lang.String"/>
                        <wz:property qualifier="orderStatus" type="OrderStatus"/>
                    </wz:property-list>
                </wz:content>

                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:next visible="!#empty(newLegacyOrder.orderNumber) != null"/>
                    <wz:done visible="false"/>
                </wz:navigation>
            </wz:step>

            <wz:step id="step2" label="Data" sublabel="Aditional Data">
                <wz:content id="step2.content">
                    <wz:info id="step2.intro" position="top" label="Create some data"/>
                    <wz:property-list root="newLegacyOrder">
                        <wz:property qualifier="orderTotal" type="java.lang.Double"/>
                        <wz:property qualifier="customer" type="Customer"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step2.navigation">
                    <wz:cancel/>
                    <wz:back/>
                    <wz:done>
                        <wz:save property="newLegacyOrder"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="LegacyOrderEntry" component="create-wizard">
        <wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="LegacyOrderEntryWizard"
                 title="create.title(ctx.TYPE_CODE)">

            <wz:prepare id="LegacyOrderEntryPrepare">
                <wz:initialize property="newLegacyOrderEntry" type="LegacyOrderEntry"/>
                <wz:assign property="newLegacyOrderEntry.code" value="ctx.code"/>
            </wz:prepare>

            <wz:step id="step1" label="General" sublabel="Legacy Order Entry information">
                <wz:content id="step1.content">
                    <wz:property-list root="newLegacyOrderEntry">
                        <wz:property qualifier="uid" type="java.lang.String"/>
                        <wz:property qualifier="product" type="Product"/>
                    </wz:property-list>
                </wz:content>

                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:next visible="!#empty(newLegacyOrderEntry.uid) != null"/>
                    <wz:done visible="false"/>
                </wz:navigation>
            </wz:step>

            <wz:step id="step2" label="Data" sublabel="Aditional Data">
                <wz:content id="step2.content">
                    <wz:info id="step2.intro" position="top" label="Create some data"/>
                    <wz:property-list root="newLegacyOrderEntry">
                        <wz:property qualifier="quantity" type="java.lang.Integer"/>
                        <wz:property qualifier="basePrice" type="java.lang.Double"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step2.navigation">
                    <wz:cancel/>
                    <wz:back/>
                    <wz:done>
                        <wz:save property="newLegacyOrderEntry"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="LegacyOrder" component="advanced-search">
        <as:advanced-search xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch">
            <as:field-list >
                <as:field name="orderNumber" operator="equals" selected="true"/>
                <as:field name="orderTotal" operator="greaterOrEquals"/>
                <as:field name="customer" operator="contains"/>
                <as:field name="orderStatus" operator="contains"/>
            </as:field-list>
            <as:sort-field name="orderNumber" asc="false" />
        </as:advanced-search>
    </context>

    <context type="LegacyOrderEntry" component="advanced-search">
        <as:advanced-search xmlns:as="http://www.hybris.com/cockpitng/config/advancedsearch">
            <as:field-list >
                <as:field name="uid" operator="equals" selected="true"/>
                <as:field name="product" operator="greaterOrEquals"/>
                <as:field name="basePrice" operator="contains"/>
                <as:field name="quantity" operator="contains"/>
            </as:field-list>
            <as:sort-field name="uid" asc="false" />
        </as:advanced-search>
    </context>

</config>
